{
	"name": "@xstyled-theme/system",
	"version": "1.0.0",
	"description": "Core utilities to manipulate the xstyled theme and write themes faster",
	"keywords": [
		"xstyled-theme",
		"xstyled",
		"theme",
		"styled-components",
		"designops"
	],
	"homepage": "https://github.com/La-Javaness/xstyled-theme-system#readme",
	"bugs": {
		"url": "https://github.com/La-Javaness/xstyled-theme-system/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:La-Javaness/xstyled-theme-system.git"
	},
	"license": "MIT",
	"author": "La Javaness <dev@lajavaness.com>",
	"main": "build/index.js",
	"files": [
		"build"
	],
	"scripts": {
		"build": "node scripts/build.js",
		"build:ci": "cross-env CI=true yarn build:prod",
		"build:next": "cross-env LJN_ENV=next yarn build",
		"build:prod": "cross-env LJN_ENV=production yarn build",
		"build:staging": "cross-env LJN_ENV=staging yarn build",
		"lint": "yarn eslint --ext .js,.jsx src",
		"lint:fix": "yarn lint --fix",
		"prepublishOnly": "yarn test:ci && yarn build:ci",
		"prettier": "scripts/precommitHookPrettier.sh",
		"prettier:check": "npx prettier \"*/**/*.{js,jsx,ts,tsx,json,rc}\" --check",
		"prettier:fix": "npx prettier \"*/**/*.{js,jsx,ts,tsx,json,rc}\" --write",
		"test": "node scripts/test.js -u",
		"test:ci": "cross-env CI=true yarn test --watchAll=false --verbose --bail",
		"test:ci:coverage": "yarn test:ci --coverage",
		"test:coverage": "yarn test --coverage --watchAll=false"
	},
	"resolutions": {},
	"dependencies": {
		"@babel/runtime": "^7.10.4",
		"core-js": "3"
	},
	"devDependencies": {
		"@babel/core": "^7.10.4",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-export-default-from": "^7.10.4",
		"@babel/plugin-transform-runtime": "^7.10.4",
		"@babel/polyfill": "^7.10.4",
		"@babel/preset-env": "^7.10.4",
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@xstyled/styled-components": "^1.17.1",
		"@xstyled/system": "^1.17.1",
		"babel-jest": "^26.1.0",
		"babel-loader": "^8.1.0",
		"babel-plugin-styled-components": "^1.10.7",
		"browserslist": "^4.13.0",
		"case-sensitive-paths-webpack-plugin": "^2.3.0",
		"chalk": "^4.1.0",
		"circular-dependency-plugin": "^5.2.0",
		"cross-env": "^7.0.2",
		"dotenv": "^8.2.0",
		"dotenv-expand": "^5.1.0",
		"eslint": "6.8.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-loader": "^4.0.2",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jest": "^23.18.0",
		"eslint-plugin-jsdoc": "^29.1.4",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
		"fs-extra": "^9.0.1",
		"husky": "^4.2.5",
		"is-wsl": "^2.2.0",
		"jest": "^26.1.0",
		"jest-environment-jsdom-sixteen": "^1.0.3",
		"jest-extended": "^0.11.5",
		"jest-styled-components": "^7.0.2",
		"jest-watch-typeahead": "^0.6.0",
		"path": "^0.12.7",
		"pnp-webpack-plugin": "^1.6.4",
		"prettier": "^2.0.5",
		"react": "^16.13.1",
		"react-dev-utils": "^10.2.1",
		"resolve": "^1.17.0",
		"semantic-release": "^17.1.1",
		"styled-components": "^5.1.1",
		"terser-webpack-plugin": "^3.0.6",
		"webpack": "^4.43.0",
		"webpack-node-externals": "^2.5.0"
	},
	"peerDependencies": {
		"@xstyled/styled-components": "^1.17.1",
		"@xstyled/system": "^1.17.1",
		"react": "^16.13.1",
		"styled-components": "^5.1.1"
	},
	"publishConfig": {
		"access": "public"
	}
}
